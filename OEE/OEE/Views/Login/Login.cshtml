
@{
    ViewBag.Title = "Login";
}
<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #17a2b8;
        height: 100vh;
    }

    #login .container #login-box {
        margin-top: 120px;
        max-width: 600px;
        height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

        #login .container #login-box #login-form {
            padding: 20px;
        }
</style>
<body>
    <div id="login">
        <div class="container">
            <div id="login-box" class="col-md-12">
                <form id="login-form" class="form" action="@Url.Action("Login")" method="post">
                    <h3 class="text-center text-info">Login</h3>
                    <div class="form-group">
                        <label for="username" class="text-info">Username:</label><br>
                        <input name="txtUSERNAME" class="resizedTextbox form-control" type="text" placeholder="User Name" />
                    </div>
                    <div class="form-group">
                        <label for="password" class="text-info">Password:</label><br>
                        <input name="txtPASS" type="password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <input id="btnDangNhap" class="btn btn-success" type="submit" value="Log In" />
                    </div>
                    <div class="form-group">
                        <label>@ViewBag.ThongBao</label>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>


