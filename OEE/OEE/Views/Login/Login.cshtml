
@{
    ViewBag.Title = "Login";
}
@using OEE.Models
@model Login

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #17a2b8;
        height: 100vh;
    }

    #login #login-box {
        width: 100%;
        margin-top: 120px;
        max-width: 650px;
        height: 430px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

        #login #login-box #login-form {
            padding: 20px;
        }
</style>
<body>
    <div style="float:right" id="login">
        <div class="container">
            <div id="login-box" class="col-md-12">
                <form id="login-form" class="form" action="@Url.Action("Login")" method="post">
                    <h3 class="text-center text-info">Login</h3>
                    <div class="row">
                        <div style="float:left; width:50%" class="form-group">
                            <label for="username" class="text-info">Username</label><br>
                            <input name="txtUSERNAME" class="resizedTextbox form-control" type="text" placeholder="User Name" />
                        </div>
                        <div style="float:left; width:50%" class="form-group">
                            <label for="ngonngu" class="text-info">Ngôn Ngữ</label><br>
                            <select name="txtNgonNgu" class="form-control">
                                <option value="0">Tiếng Việt</option>
                                <option value="1">Tiếng Anh</option>
                                <option value="2">Tiếng Hoa</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div style="float:left; width:50%" class="form-group">
                            <label for="password" class="text-info">Password</label><br>
                            <input name="txtPASS" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <div style="float:left; width:50% " class="form-group">
                            <label for="nhaxuong" class="text-info">Nhà Xưởng</label><br>
                            <select name="txtNX" class=form-control
                                        <option value="@Html.DropDownList("N_XUONG", (IEnumerable<SelectListItem>)ViewBag.MS_N_XUONG)
                                        </option>
                                    </select>
                        </div>
                    </div>
                    <div class="row">
                        <div style="float: left; width: 50%; margin-top: 10px" class="form-group">
                            <label>@ViewBag.ThongBao</label>
                        </div>
                        <div style="float:right;width:50%" class="checkbox pull-left">
                            <label><input name="chkReUser" type="checkbox"> Remember User</label>
                            <label><input name="chkLReLogin" type="checkbox"> Remember Login</label>

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group" style="float:right;width:50%">
                            <input id="btnDangNhap" class="btn btn-success" type="submit" value="LogIn" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>




